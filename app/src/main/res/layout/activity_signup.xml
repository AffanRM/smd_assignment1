<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon_primary"
    android:orientation="vertical"
    tools:context=".SignupActivity">
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back_arrow_desc"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account_subtitle"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/camera_background"
                android:contentDescription="@string/camera_icon_desc"
                android:padding="24dp"
                android:src="@drawable/camera" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_username" />

            <EditText
                style="@style/SignUpEditText"
                android:hint="@string/hint_username" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_your_name" />

            <EditText
                style="@style/SignUpEditText"
                android:hint="@string/hint_your_name"
                android:inputType="textPersonName" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_last_name" />

            <EditText
                style="@style/SignUpEditText"
                android:hint="@string/hint_last_name"
                android:inputType="textPersonName" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_dob" />

            <EditText
                style="@style/SignUpEditText"
                android:hint="@string/hint_dob"
                android:inputType="date" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_email" />

            <EditText
                style="@style/SignUpEditText"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/SignUpLabel"
                android:text="@string/label_password" />

            <EditText
                style="@style/SignUpEditText"
                android:drawableEnd="@drawable/activity"
                android:drawableTint="@android:color/white"
                android:hint="••••••••••"
                android:inputType="textPassword" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button1_background"
                android:text="@string/create_an_account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
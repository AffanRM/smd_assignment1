<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="Cancel"
            android:textColor="@color/maroon_primary"
            android:textSize="16sp"
            android:padding="8dp" />

        <RelativeLayout
            android:id="@+id/recents_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_recents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textColor="@color/maroon_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toEndOf="@id/text_recents"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:src="@drawable/arrow_down"
                app:tint="@color/maroon_primary" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Next"
            android:textColor="@color/maroon_primary"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/top_navigation"
        android:layout_above="@id/bottom_tabs">

        <RelativeLayout
            android:id="@+id/featured_image_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_above="@id/media_grid_container"
            android:background="@color/background_gray">

            <ImageView
                android:id="@+id/featured_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dm_poster" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:background="@color/black"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_multiple_select"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/infinity_icon"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/browse"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_gallery"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gallery"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT MULTIPLE"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/media_grid_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dm_4" />

                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dm_poster" />

                        <ImageView
                            android:id="@+id/image_3"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dm_1" />

                        <ImageView
                            android:id="@+id/image_4"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dm_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:id="@+id/image_5"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kanao" />

                        <ImageView
                            android:id="@+id/image_6"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shinbou" />

                        <ImageView
                            android:id="@+id/image_7"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tengen" />

                        <ImageView
                            android:id="@+id/image_8"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rengoku_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:id="@+id/image_9"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/giyuu_1" />

                        <ImageView
                            android:id="@+id/image_10"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sabito2" />

                        <ImageView
                            android:id="@+id/image_11"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/obanai" />

                        <ImageView
                            android:id="@+id/image_12"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dm_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_13"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tengen" />

                        <ImageView
                            android:id="@+id/image_14"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rengoku_2" />

                        <ImageView
                            android:id="@+id/image_15"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shinbou" />

                        <ImageView
                            android:id="@+id/image_16"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kanao" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_tabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="4dp">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Library"
            android:textColor="@color/maroon_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Photo"
            android:textColor="@color/maroon_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Video"
            android:textColor="@color/maroon_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text=".now"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/camera_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
